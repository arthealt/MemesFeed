<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Login Activity -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashScreenTheme" parent="LoginTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Login TextInputLayout -->
    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxBackgroundColor">@color/colorPrimary</item>

        <item name="helperTextTextColor">@color/colorTextEditText</item>

        <item name="errorTextColor">@color/colorError</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>

        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorHintEdit</item>

    </style>

    <!-- ProgressBar in button login -->
    <style name="ProgressBarButton">
        <item name="android:colorAccent">@color/white</item>
    </style>

</resources>