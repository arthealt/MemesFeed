<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLogin</item>
        <item name="android:windowBackground">@color/colorPrimaryDarkLogin</item>
    </style>

    <style name="SplashScreenTheme" parent="LoginTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
